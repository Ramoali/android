<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/txtMatiere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matière :"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edtMatiere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Matière"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date :"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtSeance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Séance :"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edtSeance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Séance"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtJustifiee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Justifiée :"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <Switch
        android:id="@+id/switchJustifiee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSaveChanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sauvegarder les modifications"
        android:layout_marginTop="16dp" />

</LinearLayout>


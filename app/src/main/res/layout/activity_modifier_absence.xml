<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matière :"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtMatiere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom de la matière"
            android:textSize="16sp"
            android:backgroundTint="#CCCCCC"
            android:padding="10dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="JJ/MM/AAAA"
            android:textSize="16sp"
            android:backgroundTint="#CCCCCC"
            android:padding="10dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Séance :"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtSeance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numéro ou intitulé de la séance"
            android:textSize="16sp"
            android:backgroundTint="#CCCCCC"
            android:padding="10dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Justifiée :"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Switch
            android:id="@+id/switchJustifiee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sauvegarder les modifications"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
